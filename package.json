{
  "name": "scripticus",
  "version": "2.0.0",
  "description": "Legends of Idleon Discord bot",
  "main": "dist/index.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "pm2 start ./dist/ecosystem.config.js",
    "poststart": "pm2 monit",
    "restart": "pm2 restart ./dist/ecosystem.config.js",
    "postrestart": "pm2 monit",
    "stop": "pm2 stop ./dist/ecosystem.config.js",
    "poststop": "npm run delete",
    "delete": "pm2 delete ./dist/ecosystem.config.js",
    "logs": "pm2 logs Scripticus",
    "dev": "npm run clean && tsc --project tsconfig.json && node .",
    "commandregister": "npm run build && node dist/src/registerGlobalCommands.js",
    "updatepm2": "pm2 update",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.production.json",
    "clean": "rimraf dist/"
  },
  "author": "Deerjump",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.24.0",
    "chalk": "^4.1.2",
    "cron": "^1.8.2",
    "discord.js": "^13.3.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "mongoose": "^6.0.6",
    "pm2": "^5.1.1"
  },
  "devDependencies": {
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/node": "^16.10.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Balthius/Scripticus.git"
  },
  "bugs": {
    "url": "https://github.com/Balthius/Scripticus/issues"
  },
  "homepage": "https://github.com/Balthius/Scripticus#readme",
  "_moduleAliases": {
    "@modules": "dist/rest/modules",
    "@services": "dist/services"
  }
}
